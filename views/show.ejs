<% include ./partials/header.ejs %>

<div class="w-full min-h-screen bg-zinc-600 px-10 py-8 text-white">
    <div class="cards flex flex-wrap gap-10">
        <% user.posts.forEach(function(elem){ %>
            <div class="card w-32 text-center">
                <div class="w-full h-40 rounded-lg bg-zinc-800 overflow-hidden items-center">
                    <img class="w-full h-full object-cover" src="/images/uploads/<%= elem.image %>" alt="">
                </div>
                <h5 class="mt-2 text-sm"><%=elem.title %></h5>
            </div>
        <% })  %>
    </div>

</div>

<% include ./partials/footer.ejs %>